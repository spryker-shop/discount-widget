{% extends model('component') %}

{% define config = {
    name: 'discount-voucher-form',
    tag: 'div'
} %}

{% define data = {
    form: _widget.voucherForm
} %}

{% block body %}
    {% include molecule('form') with {
        modifiers: ['inline'],
        data: {
            form: data.form,
            submit: {
                enable: true,
                text: 'cart.voucher.redeem' | trans,
                icon: 'gift',
                class: 'button'
            }
        }
    } only %}
{% endblock %}
